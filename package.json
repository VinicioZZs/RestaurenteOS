{
  "name": "servyx",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development electron .\" \"next dev\"",
    "electron:build": "next build && electron-builder"
  },
  "build": {
    "appId": "com.threeliky.servyx",
    "productName": "Servyx",
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!**/*.tsx",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "bin/mongodb/",
        "to": "bin/mongodb/",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cookie": "^1.1.1",
    "dotenv": "^17.2.3",
    "electron-serve": "^3.0.0",
    "lucide-react": "^0.562.0",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.3",
    "next": "^14.2.35",
    "react": "^18",
    "react-dom": "^18",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@types/mongodb": "^4.0.6",
    "@types/node": "^20.19.27",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
